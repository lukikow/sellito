%p
  = link_to 'Back', posts_path, class: 'btn'
  - if post_owner(@post)
    = link_to 'Edit', edit_post_path,  class: 'btn'
    = link_to 'Delete', @post, method: :delete, data: { confirm: "Are you sure?"},  class: 'btn'

%br
%h4 Title:
= @post.title

%h4 Expiration date:
= @post.expiration_date.to_date

%br
%h4 Description
%p
  = @post.description
